<h1>Peep Feed!</h1>

<% unless @peeps.nil?%>
  <div id='peeps'>
  <% @peeps.reverse_each do |peep| %>
    <li>
      <%= peep.content %><br>
      Posted: <%=peep.created_at.strftime("%e %B %k:%M")%>
    </li>
  </div>
  <% end %>
<% end %>

  <form action='/users/new'>
    <input type='submit' value='Sign Up'>
  </form>

  <form action='/sessions/new'>
    <input type='submit' value='Sign In'>
  </form>

  <form action='/peeps/new'>
    <input type='submit' value='Post a Peep'>
  </form>
